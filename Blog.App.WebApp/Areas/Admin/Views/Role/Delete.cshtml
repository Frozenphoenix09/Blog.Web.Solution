@model Blog.App.Data.Models.Role
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Role Manager</li>
    </ol>
    <h6 class="slim-pagetitle">Role-Delete</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">

    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleId">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Role Name :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleName">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Role Discription
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="RoleDescription">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Is Admin
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                @if (Model.IsAdmin)
                {
                    <input class="form-control" type="text" value="Yes">
                }
                else
                {
                    <input class="form-control" type="text" value="No">
                }
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
</div><!-- section-wrapper -->
<div style="text-align:center !important" class="form-layout-footer mg-t-30">
    <form asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-id="@Model.RoleId">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Are you sure to delete !? " class=" btn btn-danger" />
        <a asp-area="Admin" asp-controller="Role" asp-action="Index" class=" btn btn-success bd-0"> Back to list</a>
    </form>
</div>

