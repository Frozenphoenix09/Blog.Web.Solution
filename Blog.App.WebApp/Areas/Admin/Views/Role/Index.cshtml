@using Blog.App.WebApp.Enums
@model IEnumerable<Blog.App.Data.Models.Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Role Manager</li>
    </ol>
    <h6 class="slim-pagetitle">Role</h6>
</div><!-- slim-pageheader -->
<h5>
    <a asp-area="Admin" asp-controller="Role" asp-action="Create">Create New</a>
</h5>
<div class="section-wrapper mg-t-20">
    <div class="table-responsive">
        <table class="table table-hover mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Role Name</th>
                    <th>Role Discription</th>
                    <th>Is Admin </th>
                    <th>Action </th>
                </tr>
            </thead>
            <tbody>
               @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.RoleId</th>
                            <td>@item.RoleName</td>
                            <td>@item.RoleDescription</td>
                            <td>
                               @if (item.IsAdmin)
                                {
                                    <span>Yes</span>
                                }
                                else
                                {
                                    <span>No</span>
                                }
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Role" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                                <a asp-area="Admin" asp-controller="Role" asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                                <a asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div><!-- table-responsive -->
</div><!-- section-wrapper -->
