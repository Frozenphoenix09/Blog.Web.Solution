@model Blog.App.Data.Models.Post
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles
{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

    <link href="~/AdminAssets/Handle/css/Override.css" rel="stylesheet" />
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Post Manager</li>
    </ol>
    <h6 class="slim-pagetitle">Post - Create</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-layout form-layout-4">
            <div class="row">
                <label class="col-sm-4 form-control-label">Title<span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="Title">
                </div>
            </div><!-- row -->
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Short Description <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="ShortDescription">
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Author Name <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="AuthorName">
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
            </div><!-- row -->
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"> Category <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <select asp-for="CatId" class="form-control overrideHeight" asp-items="ViewBag.CatId"> <option value="0">Select Category</option></select>
                    <span asp-validation-for="CatId"></span>
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"> Thumb <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="file" name="fThumb" class="form-control-file" asp-for="Thumb" />
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"> Date Create <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input asp-for="DateCreate" class="form-control" />
                    <span asp-validation-for="DateCreate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"> Content<span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-layout-footer mg-t-30">
                <button class="btn btn-primary bd-0">Create</button>
                <button class="btn btn-secondary bd-0" asp-area="admin" asp-controller="Post" asp-action="Index">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
<div>
    <a asp-area="Admin" asp-controller="Post" asp-action="Index">Back to List</a>
</div>
@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/js/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Content').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}


