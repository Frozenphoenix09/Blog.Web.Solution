@using Blog.App.WebApp.Enums
@model Blog.App.Data.Models.User
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Users Manager</li>
    </ol>
    <h6 class="slim-pagetitle">User - Edit</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Passwd" />
        <input type="hidden" asp-for="Salt" />
        <input type="hidden" asp-for="LastLogin" />
        <input type="hidden" asp-for="Thumb" />
        <input type="hidden" asp-for="Email" />

        <div class="form-layout form-layout-4">
            <div class="row">
                <label class="col-sm-4 form-control-label">User Name <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div><!-- row -->
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"> Thumb <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="file" name="fThumb" class="form-control-file" asp-for="Thumb" />
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Status<span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <select asp-for="Status" class="form-control" asp-items="ViewBag.UserStatus"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Role<span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Phone Number<span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-layout-footer mg-t-30">
                <button class="btn btn-primary bd-0">Save Change</button>
                <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="Users" asp-action="Index">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
@if (GlobalVariable.IsAdminUser)
{
    <div>
        <a asp-area="Admin" asp-controller="User" asp-action="Index">Back to List</a>
    </div>
    <div style="display : none;">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
    </div>
}
else
{
    <div style="display : none;">
        <a asp-area="Admin" asp-controller="User" asp-action="Index">Back to List</a>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
    </div>
}


