@model Blog.App.WebApp.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<form asp-area="Admin" asp-controller="User" asp-action="Login" method="post">
    <div class="signin-box">
        <p style="color:green; font-size:24px;">@ViewBag.Message </p>
        <h2 class="slim-logo"><a href="/">Blog<span>.</span></a></h2>
        <h2 class="signin-title-primary">Welcome back!</h2>
        <h3 class="signin-title-secondary">Sign in to continue.</h3>

        <div class="form-group">
            <input type="text" class="form-control" asp-for="Email" placeholder="Enter your email">
        </div><!-- form-group -->

        <div class="form-group mg-b-50">
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
        </div><!-- form-group -->

        <button class="btn btn-primary btn-block btn-signin">Sign In</button>
        <p class="mg-b-0">Don't have an account? <a href="dang-ky.html">Sign Up</a></p>
        <p class="text-danger">@ViewBag.Error</p>

    </div><!-- signin-box -->
</form>

