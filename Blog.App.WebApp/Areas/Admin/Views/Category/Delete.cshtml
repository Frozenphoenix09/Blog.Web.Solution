@model Blog.App.Data.Models.Category
@using Blog.App.WebApp.Enums
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Category Manager</li>
    </ol>
    <h6 class="slim-pagetitle">Category-Delete</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">

    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="CatId">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Category Name :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="CatName">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Category Parent :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input class="form-control" type="text" asp-for="CatParent.CatName">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
</div><!-- section-wrapper -->
<div style="text-align:center !important" class="form-layout-footer mg-t-30">
    <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.CatId">
        <input type="hidden" asp-for="CatId" />
        <input type="submit" value="Are you sure to delete !? " class=" btn btn-danger" />
        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class=" btn btn-success bd-0"> Back to list</a>
    </form>
</div>