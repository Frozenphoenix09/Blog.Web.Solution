@model Blog.App.Data.Models.Category
@using Blog.App.WebApp.Enums
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Category Manager</li>
    </ol>
    <h6 class="slim-pagetitle">Category - Edit</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@Model.CatId" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CatId" />
        <input type="hidden" asp-for="Alias" />
        <div class="form-layout form-layout-4">
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label" style="font-weight:bold"> Edit - @Model.CatName</label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    
                </div>
            </div><!-- row -->
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label"></label>
                <div class="col-lg-2">
                    <label class="ckbox">
                        <input type="checkbox" asp-for="ShowOnHome"><span>Show On Home </span>
                    </label>
                </div><!-- col-4 -->
                <div class="col-lg-2">
                    <label class="ckbox">
                        <input type="checkbox" asp-for="ShowOnMenu"><span>Show On Menu</span>
                    </label>
                </div><!-- col-4 -->
                <div class="col-lg-3">
                    <label class="ckbox">
                        <input type="checkbox" name="changeCatName" id="changeCatName" checked="checked" onclick="myFunction()"><span>Change Category Name</span>
                    </label>
                </div><!-- col-4 -->
            </div>
            <div id="changeCatNameDiv">
                <div class="row">
                    <label class="col-sm-4 form-control-label">Category Name <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input type="text" class="form-control" asp-for="CatName">
                        <span asp-validation-for="CatName" class="text-danger"></span>
                    </div>
                </div><!-- row -->
            </div>
            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Layout Type <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="LayoutType">
                    <span asp-validation-for="LayoutType" class="text-danger"></span>
                </div>
            </div><!-- row -->

            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Layout Description <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <input type="text" class="form-control" asp-for="LayoutDescription">
                    <span asp-validation-for="LayoutDescription" class="text-danger"></span>
                </div>
            </div><!-- row -->

            <div class="row mg-t-20">
                <label class="col-sm-4 form-control-label">Category Parent <span class="tx-danger">*</span></label>
                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                    <select asp-for="CatParentId" class="form-control" asp-items="ViewBag.CatParentId"><option value="">Select Category Parent </option></select>
                    <span asp-validation-for="CatParentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-layout-footer mg-t-30">
                <button class="btn btn-primary bd-0">Submit Changes</button>
                <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="Category" asp-action="Index">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
<div>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script>
        function myFunction() {
            // Get the checkbox
            var checkBox = document.getElementById("changeCatName");
            // Get the output text
            var changeCatNameDiv = document.getElementById("changeCatNameDiv");

            // If the checkbox is checked, display the output text
            if (checkBox.checked == true) {
                changeCatNameDiv.style.display = "block";
                checkBox.nodeValue = "true";
            } else {
                changeCatNameDiv.style.display = "none";
                checkBox.nodeValue = "false";
            }
        }
    </script>
}