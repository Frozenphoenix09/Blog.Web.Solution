                                else if (ViewBag.LastestPost[0].AuthorName == null && ViewBag.LastestPost[0].Author == null)
                                {
                                    <li class="list-inline-item">Author Deleted !</li>
                                }
                                <li class="list-inline-item">@ViewBag.LastestPost[0].DateCreate</li>
                            </ul>
                        </div>
                        <a href="@url">
                            <div class="thumb rounded" href="@url">
                                <img src="~/images/news/@ViewBag.LastestPost[0].Thumb" />
                            </div>
                        </a>
                    </div>
                </div>
            }

            <div class="col-lg-4">

                <!-- post tabs -->
                <div class="post-tabs rounded bordered">
                    <!-- tab navs -->
                    <ul class="nav nav-tabs nav-pills nav-fill" id="postsTab" role="tablist">
                        <li class="nav-item" role="presentation"><button aria-controls="popular" aria-selected="true" class="nav-link active" data-bs-target="#popular" data-bs-toggle="tab" id="popular-tab" role="tab" type="button">Popular</button></li>
