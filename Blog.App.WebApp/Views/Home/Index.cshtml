                            <ul class="meta list-inline mb-0">
                                @if (ViewBag.LastestPost[0].AuthorName != null && ViewBag.LastestPost[0].Author != null)
                                {
                                    <li class="list-inline-item"> @ViewBag.LastestPost[0].AuthorName</li>
                                }
                                @if (ViewBag.LastestPost[0].AuthorName != null && ViewBag.LastestPost[0].Author == null)
                                {
                                    <li class="list-inline-item"> @ViewBag.LastestPost[0].AuthorName</li>
